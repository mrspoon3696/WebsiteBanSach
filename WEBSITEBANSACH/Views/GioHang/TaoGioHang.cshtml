@using WEBSITEBANSACH.Models
@model List<GioHangModels>
@{
    ViewBag.Title = "TaoGioHang";
    Layout = "~/Views/Shared/layout.cshtml";
}
<h2 style="text-align:center;">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-hover">
    <thead style="font-weight:bold; color:blue;">
        <tr>
            <th style="font-weight:bold;">Mã Sách </th>
            <th style="font-weight:bold; text-align:center">Tên Sách</th>
            <th style="font-weight:bold;">Ảnh Bìa</th>
            <th style="font-weight:bold;">Số Lượng</th>
            <th style="font-weight:bold;">Đơn Giá</th>
            <th style="font-weight:bold;">Thành Tiền</th>
            <th colspan="3">  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td> @item.iMaSach</td>

                <td style="text-align:center;"> @item.sTenSach</td>

                <td><img src="~/hinhanh/sach/@item.sAnhBia" width="50" height="50" /> </td>

                @using (Html.BeginForm("capnhatgiohang", "GioHang", new { @iMaSP = item.iMaSach }))
                {
                    <td>
                        <input style="width:40px" type="number" min="1" name="txtSoluong" value="@item.iSoLuong" />
                    </td>

                    <td> @String.Format("{0:0,0}", @item.dDongia) </td>


                    <td> @String.Format("{0:0,0}", @item.dThanhTien) </td>

                    <td><a class="btn btn-sm btn-info" href="@Url.Action("chitiet", "Sachmoi", new { id = item.iMaSach })"> CHI TIẾT</a></td>
                <td >
                <input class="btn btn-sm btn-info"  type="submit" value="CẬP NHẬT" /></td>
                    <td>
                        <button class="btn btn-sm btn-default" >
                            <span class="glyphicon glyphicon-trash"></span>
                            @Html.ActionLink("XÓA", "xoagiohang", new { @iMaSP = item.iMaSach })
                        </button>
                    </td>
                  
                }
            </tr>
        }
    </tbody>

    <tfoot style="text-align:center;font-weight:bold">
        <tr style="font-weight:bold;text-align:center;color:red">

            <td colspan="4"> Số Lượng Sách : @ViewBag.TongSoLuong </td>
            <td colspan="4"> Tổng Tiền : @String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ </td>
            <td >@Html.ActionLink("XÓA GIỎ HÀNG", "Xoatatca")</td>
        </tr>

        <tr >
            <td style="font-weight:bold; background:#fff200;"  class="btn btn-default">
                @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
            </td>
</tr>


    </tfoot>



</table>