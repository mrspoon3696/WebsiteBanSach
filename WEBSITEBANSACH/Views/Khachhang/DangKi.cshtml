@{
    ViewBag.Title = "DangKi";
    Layout = "~/Views/Shared/Mylayout.cshtml";
}
<h2 style="text-align:center;">ĐĂNG KÍ THÀNH VIÊN</h2>
<table align="center">

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    <tr style="height:40px">
        <td>Tên khách hàng</td>
        <td>
            @Html.TextBox("HotenKH")
            @ViewData["Loi1"]
        </td>
    </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>

        </tr>

        <tr style="height:40px">
            <td>Mật khẩu</td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu</td>
            <div></div>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi4"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Điện thoại</td>
            <td>
                @Html.TextBox("DienThoai")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Giới Tính</td>
            <td>
                @Html.TextBox("GioiTinh")
                @ViewData["Loi6"]
            </td>



        </tr>
        <tr style="height:40px">
            <td>Ngày sinh</td>
            <td>
                <input type="date" name="NgaySinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng kí" />
            </td>
        </tr>



    }

</table>




