@model WEBSITEBANSACH.Models.KHACHHANG
@{
    ViewBag.Title = "Dangki";
    Layout = "~/Views/Shared/layout.cshtml";
}


    <div class="col-sm-6 col-sm-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading" style="text-align:center">
                <span class="glyphicon glyphicon-user"></span> ĐĂNG KÍ TÀI KHOẢN
            </div>
            <div class="panel-body">
                @Html.ValidationSummary()
                @using (Html.BeginForm("Dangki", "Nguoidung",
                    FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="col-sm-9 col-sm-offset-2">
                    <div class="form-group">
                        <label>Họ tên</label>
                        @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control" })
                    </div>
                        </div>
                     <div class="col-sm-9 col-sm-offset-2">
                    <div class="form-group">
                        <label>Tài khoản</label>
                        @Html.TextBoxFor(m => m.Taikhoan, new { @class = "form-control" })
                    </div>
                         </div>
                     <div class="col-sm-9 col-sm-offset-2">
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.TextBoxFor(m => m.Matkhau, new { @class = "form-control" })
                    </div>
                         </div>
                     <div class="col-sm-9 col-sm-offset-2">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                         </div>
                     <div class="col-sm-9 col-sm-offset-2">
                   <div class="form-group">
                        <label>Điện thoại</label>
                        @Html.TextBoxFor(m => m.Dienthoai, new { @class = "form-control" })
                    </div>
                   </div>
                    
                         <div class="form-group" style="text-align:center">
                             <button class="btn btn-default">
                                 <span class="glyphicon glyphicon-log-in"></span> ĐĂNG KÍ
                             </button>
                         </div>
                        
                }
            </div>
            <div class="panel panel-primary">
                
                
            </div>
    </div>
        </div>
   